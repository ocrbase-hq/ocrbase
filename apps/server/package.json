{
  "name": "server",
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify-whitespace --minify-syntax --sourcemap --bytecode ./src/index.ts --outfile server && bun build --compile --minify-whitespace --minify-syntax --sourcemap --bytecode ./src/workers/job.worker.ts --outfile worker",
    "generate-openapi": "bun run scripts/generate-openapi.ts",
    "compile:cluster": "bun build --compile --minify-whitespace --minify-syntax --sourcemap --bytecode ./src/cluster.ts --outfile server-cluster",
    "dev": "bun run --hot src/index.ts | bun x pino-pretty",
    "dev:worker": "bun run --hot src/workers/job.worker.ts",
    "start": "bun run dist/index.js",
    "start:cluster": "bun run src/cluster.ts",
    "worker": "bun run src/workers/job.worker.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.23",
    "@aws-sdk/client-s3": "^3.978.0",
    "@aws-sdk/s3-request-presigner": "^3.978.0",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "^1.4.14",
    "@ocrbase/auth": "workspace:*",
    "@ocrbase/db": "workspace:*",
    "@ocrbase/env": "workspace:*",
    "@ocrbase/paddleocr-vl-ts": "workspace:*",
    "@sinclair/typebox": "^0.34.48",
    "ai": "^6.0.62",
    "better-auth": "catalog:",
    "bullmq": "^5.67.2",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "elysia": "catalog:",
    "ioredis": "^5.9.2",
    "nanoid": "catalog:",
    "pino": "^10.3.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ocrbase/config": "workspace:*",
    "@types/bun": "catalog:",
    "pino-pretty": "^13.1.3",
    "tsdown": "^0.20.1",
    "typescript": "catalog:"
  }
}
