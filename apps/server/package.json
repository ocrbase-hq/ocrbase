{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts | bun x pino-pretty",
    "dev:worker": "bun run --hot src/workers/job.worker.ts",
    "start": "bun run dist/index.js",
    "worker": "bun run src/workers/job.worker.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.12",
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/s3-request-presigner": "^3.971.0",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "^1.4.13",
    "@ocrbase/auth": "workspace:*",
    "@ocrbase/db": "workspace:*",
    "@ocrbase/env": "workspace:*",
    "@ocrbase/paddleocr-vl-ts": "workspace:*",
    "@openrouter/ai-sdk-provider": "^1.5.4",
    "@sinclair/typebox": "^0.34.47",
    "ai": "^6.0.41",
    "better-auth": "catalog:",
    "bullmq": "^5.66.5",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "elysia": "catalog:",
    "ioredis": "^5.9.2",
    "nanoid": "catalog:",
    "pino": "^10.2.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ocrbase/config": "workspace:*",
    "@types/bun": "catalog:",
    "pino-pretty": "^13.1.3",
    "tsdown": "^0.19.0",
    "typescript": "catalog:"
  }
}
