{
  "name": "ocrbase",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@tanstack/react-query": "^5.90.19",
      "@types/bun": "^1.3.7",
      "@types/react": "^19.2.8",
      "@types/react-dom": "^19.2.3",
      "better-auth": "^1.4.13",
      "dotenv": "^17.2.3",
      "drizzle-orm": "^0.45.1",
      "elysia": "^1.4.22",
      "nanoid": "^5.1.6",
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "typescript": "^5.9.3",
      "zod": "^4.3.6"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev dev:worker",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev dev:worker",
    "db:push": "turbo -F @ocrbase/db db:push",
    "db:studio": "turbo -F @ocrbase/db db:studio",
    "db:generate": "turbo -F @ocrbase/db db:generate",
    "db:migrate": "turbo -F @ocrbase/db db:migrate",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@ocrbase/env": "workspace:*",
    "dotenv": "^17.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@ocrbase/config": "workspace:*",
    "@types/bun": "^1.3.8",
    "lefthook": "^2.0.16",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "turbo": "^2.8.0",
    "typescript": "^5.9.3",
    "ultracite": "7.1.1"
  },
  "packageManager": "bun@1.3.8"
}
